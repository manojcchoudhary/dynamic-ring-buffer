{
    "name": "dynamic-ring-buffer",
    "version": "0.0.1",
    "author": "Manoj C Choudhary",
    "scripts": {
        "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun run build:declaration",
        "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
        "postbuild": "rimraf tsconfig.types.tsbuildinfo",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/manojcchoudhary/dynamic-ring-buffer.git"
    },
    "main": "dist/index.js",
    "module": "index.ts",
    "dependencies": {
        "prettier": "^3.2.4"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/jest": "^29.5.11",
        "benchmark": "^2.1.4",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.0.0"
    },
    "description": "The `DynamicRingBuffer` class is a generic implementation of a dynamic circular buffer (ring buffer) in TypeScript. It provides thread-safe and non-thread-safe methods for enqueueing, dequeueing, and iterating over elements. The buffer dynamically resizes when full and offers both forward and reverse iteration capabilities.",
    "files": [
        "dist/*.js",
        "dist/*.d.ts"
    ],
    "keywords": [
        "ring buffer",
        "dynamic ring buffer"
    ],
    "license": "GPL-3.0-only",
    "type": "module",
    "types": "dist/index.d.ts"
}
